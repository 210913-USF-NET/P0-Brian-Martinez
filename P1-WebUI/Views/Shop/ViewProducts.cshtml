@model IEnumerable<Models.Inventory>

@{
    ViewData["Title"] = "ViewProducts";
    Layout = "../Shared/_LayoutCustomer.cshtml";
}

<h1 style="color:mintcream;">ViewProducts</h1>

<div>
    <a asp-action="Index" style="color: mintcream;">Back to Main Menu</a>
</div>

<table class="table">
    <thead style="color:mintcream;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody style="color:mintcream;">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Index" style="color: mintcream;">Back to Main Menu</a>
</div>
