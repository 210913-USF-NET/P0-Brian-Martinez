@model IEnumerable<Models.Product>

@{
    ViewData["Shop"] = "Shop";
}

<h1 style="color:mintcream;">Shop</h1>
<br />
<form>
    <fieldset class="form-group">
        <div class="row">
            <legend class="col-form-label pt-0" style="color:mintcream; font-size:18px;">Select a Product:</legend>
            <br />
            <div class="col-sm-10">
                @foreach (var item in Model)
                {
                    <div class="row">
                        <div class="form-check col-4">
                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
                            <label class="form-check-label" for="gridRadios1" style="color:mintcream;">
                                @Html.DisplayFor(modelItem => item.Name)
                            </label>
                        </div>
                        <div class="col">
                            <label class="form-check-label" for="gridRadios1" style="color:mintcream;">
                                |<span style="color: #202120;">ooooo</span>$@Html.DisplayFor(modelItem => item.Price)
                            </label>
                        </div>
                    </div>
                }
            </div>
        </div>
    </fieldset>
    <div class="form-group row>
        <label for="quantity" style="color:mintcream;">Quantity:</label>
        <input type="number" id="quantity" name="quantity" min="1" max="" />
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success">Add to Cart</button>
        </div>
    </div>
</form>
