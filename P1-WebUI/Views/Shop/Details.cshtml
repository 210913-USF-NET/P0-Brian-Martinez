@model IEnumerable<Models.LineItem>

@{
    ViewData["Title"] = "Details";
    Layout = "../Shared/_LayoutCustomer.cshtml";
}

<h1 style="color: mintcream;">Details</h1>

<table class="table">
    <thead style="color: mintcream;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Store.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.item.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody style="color: mintcream;">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Store.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.item.Name)
                    @*@ViewBag.Product.Name*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="ViewOrders" style="color: mintcream;">Back to List</a>
</div>
