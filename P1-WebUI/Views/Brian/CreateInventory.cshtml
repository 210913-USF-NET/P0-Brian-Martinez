@model Models.Inventory

@{
    ViewData["Title"] = "CreateInventory";
}

<h1 style="color:mintcream;">Create Inventory</h1>

<h4 style="color:mintcream;">Inventory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateInventory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StoreId" class="control-label" style="color:mintcream;"></label>
                <input asp-for="StoreId" class="form-control" />
                <span asp-validation-for="StoreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label" style="color:mintcream;"></label>
                <input asp-for="ProductId" class="form-control" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label" style="color:mintcream;"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color:mintcream;">Back to List</a>
</div>

