@model IEnumerable<Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<h1 style="color:mintcream;">Customers</h1>

<table class="table">
    <thead style="color:mintcream;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody style="color:mintcream;">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.ActionLink("Orders", "Orders", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Index" style="color: mintcream;">Back to Main Menu</a>
</div>
