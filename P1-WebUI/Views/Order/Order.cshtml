@model IEnumerable<Models.Product>

@{
    ViewData["Shop"] = "Order";
    Layout = "../Shared/_LayoutCustomer.cshtml";
}

<h1 style="color:mintcream;">Order</h1>
<br />
<form asp-action="Order">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <fieldset class="form-group">
        <div class="row">
            <legend class="col-form-label pt-0" style="color:mintcream; font-size:18px;">Select a Product:</legend>
            <br />
            <div class="col-sm-10">
                @foreach (var item in Model)
                {
                    <div class="row">
                        <div class="form-check col-4">
                            <input asp-for="@item.Id" type="radio" name="item" value="@item.Id">
                            @*@Html.ActionLink("Go to location", "Order", "Order", new { id = item.Id })*@
                            <label asp-for="@item.Id" style="color:mintcream;">
                                @Html.DisplayFor(modelItem => item.Name)
                            </label>
                            <span asp-validation-for="@item.Id" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label class="form-check-label" for="@item.Id" style="color: mintcream; font-size: 18px;">
                                |<span style="color: #202120;">ooooo</span>$@Html.DisplayFor(modelItem => item.Price)
                            </label>
                        </div>
                    </div>
                }
            </div>
        </div>
    </fieldset>
    <div class="form-group row">
        <label for="quantity" style="color:mintcream;">Quantity: <span style="color: #202120;">o</span></label>
        <input type="number" id="quantity" name="quantity" min="1" max="20" />
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" value="Order" class="btn btn-success" />
        </div>
    </div>
</form>
